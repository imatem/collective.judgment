<!-- plone/app/dexterity/browser/container|folder_listing.pt -->
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="collective.judgment">
  <body>

    <metal:content-core fill-slot="content-core">
      <metal:block define-macro="content-core">
        <metal:listingmacro define-macro="listingjquery">
          <tal:results define="items view/itembrains">
            <tal:listing condition="items">
              <ul tal:repeat="item items">
                <li>
                  <div class="row-personaldata">
                    <div class="name">
                      <h2 tal:content="item/Title | nothing"/>
                    </div>
                    <div class="classification">
                      Investigador Titular A
                    </div>
                  </div>
                  <div class="row-type">
                    <p tal:content="item/PortalType | nothing"/>
                  </div>
                  <div class="row-date">
                    01/01/2017
                  </div>
                  <div class="row-evaluations" tal:define="evaluations python:view.evaluations(item)">
                    <ul>
                      <li tal:repeat="evaluator evaluations">
                        <span tal:content="evaluator"/>
                      </li>
                    </ul>
                  </div>
                </li>
              </ul>



            </tal:listing>
            <metal:empty metal:define-slot="no_items_in_listing">
              <p class="discreet"
                  tal:condition="not: items">
                There are currently no items in this folder.
              </p>
            </metal:empty>
          </tal:results>

        </metal:listingmacro>
      </metal:block>
    </metal:content-core>
  </body>
</html>
